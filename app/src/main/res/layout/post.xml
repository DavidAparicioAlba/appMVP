<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.Post">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp" android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints">
        <TextView
                android:text="@string/post_title"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="wrap_content" android:id="@+id/postTextView"/>
        <Button

                android:layout_width="match_parent"
                android:id="@+id/infoButton" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/postTextView"
                android:layout_marginTop="0dp"
                android:text="@string/info_button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>